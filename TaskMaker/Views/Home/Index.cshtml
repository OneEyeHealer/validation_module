<html>
<head>
    <link href="~/Content/app.css" rel="stylesheet" />
    <link href="~/Content/dropdrag.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="~/Scripts/drag-and-drop-lists.js"></script>
    <script data-require="angular.js@1.4.5" data-semver="1.4.5" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="~/Scripts/app.js" type="text/javascript"></script>
</head>
<body ng-app="myApp">
    <div class="container">
        <h2 class="text-center">Task Maker List</h2>
            <div class="container" ng-controller="moduleController">
                <button type="button" class="btn btn-primary" id="liveToastBtn" style="display: none;" ng-click="OpenToast()">Show live toast</button>

                <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
                    <div id="liveToast" class="toast hide align-items-center text-white border-0" ng-class="toastType == 'success' ? 'bg-success' : 'bg-danger'"  role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <img src="https://toppng.com/uploads/preview/click-bell-icon-youtube-11549535067p8ug90rs63.png"
                                 class="rounded me-2" alt="..." width='30px' height="auto">
                            <strong class="me-auto">{{toastTitle}}</strong>
                            <small>Just now</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            {{toastMessage}}
                        </div>
                    </div>
                </div>
                <div class="col-auto form-box">
                    <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnPostData('Module','post', 0)">{{CModule}}</span>
                    <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnMoveData('Module', moduleData)"><i class="fa fa-undo"></i>&nbsp;{{RModule}}</span>
                    <i class="fa fa-search"></i>&nbsp;
                    <input type="search" name="search" id="search" ng-model="search" ng-change="OnSearch(search)" placeholder="Search" />
                </div>
                <!--Module-->
                <ul class="list-group list-group-numbered">

                    <!--Module false status-->
                    <li ng-repeat="module in moduleData" class="list-group-item" id="module-{{module.moduleId}}" ng-class="showModule && Mkey == 'module-'+module.moduleId ? 'active-block': ''" ng-if="!module.moduleStatus">
                        <a href="#module-{{module.moduleId}}" ng-click="OnModuleClick('module-'+module.moduleId, module)">
                            <span class="title"><i class="fa" ng-class="showModule && Mkey == 'module-'+module.moduleId && module.Exercises.length > 0? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa fa-folder"></i>&nbsp;{{module.moduleName}}</span>
                            <span class="option-btn">
                                <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnRestore('Module', module.moduleId)">
                                    <i class="fa fa-refresh"> &nbsp; Restore data</i>
                                </span>
                            </span>
                        </a>
                    </li>
                    <!--Module true status-->
                    <li ng-repeat="module in moduleData" class="list-group-item" id="module-{{module.moduleId}}" ng-class="showModule && Mkey == 'module-'+module.moduleId ? 'active-block': ''" ng-if="module.moduleStatus">
                        <a href="#module-{{module.moduleId}}" ng-click="OnModuleClick('module-'+module.moduleId, module)">
                            <span class="title"><i class="fa" ng-class="showModule && Mkey == 'module-'+module.moduleId && module.Exercises.length > 0 ? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa" ng-class="showModule && Mkey == 'module-'+module.moduleId && module.Exercises.length > 0 ? 'fa-folder-open': 'fa-folder'"></i>&nbsp;{{module.moduleName}}</span>
                            <span class="option-btn">
                                <span class="me-3 pe-1 position-relative" ng-if="module.Exercises.length > 0">
                                    Exercises
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        {{module.Exercises.length}}
                                    </span>
                                </span>
                                <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnPostData('Exercise', 'post', module.moduleId)">{{CExercise}}</span>
                                <span class="btn btn-sm btn-primary manupulate-btn" ng-if="module.Exercises.length > 1" ng-click="OnMoveData('Exercise', module.Exercises)"><i class="fa fa-undo"></i>&nbsp;{{RExercise}}</span>
                                <i class="fa fa-edit text-info" ng-click="OnPutData('Module','put', module)"></i>
                                <i class="fa fa-trash text-danger" ng-click="OnDeleteData('Module', module.moduleId)"></i>
                            </span>
                            <div class="discription-box">
                                <i class="fa fa-arrow-right"></i> {{module.moduleDescription}}
                            </div>
                        </a>
                        <!--Exercise-->
                        <ul class="list-group list-group-numbered" ng-if="Mkey == 'module-'+module.moduleId">
                            <!--Exercise False status-->
                            <li ng-repeat="exercise in Exercises" class="list-group-item" id="exercise-{{exercise.exerciseId}}" ng-class="showModule ? 'Active': 'inActive'" ng-if="!exercise.exerciseStatus">
                                <a href="#exercise-{{exercise.exerciseId}}" ng-click="OnExerciseClick('exercise-'+exercise.exerciseId, exercise)">
                                    <i class="fa" ng-class="showExercise && Ekey == 'exercise-'+exercise.exerciseId && exercise.Tasks.length > 0 ? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa fa-envelope"></i>&nbsp;{{exercise.exerciseName}}
                                    <span class="option-btn">
                                        <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnRestore('Exercise', exercise.exerciseId)">
                                            <i class="fa fa-refresh"> &nbsp; Restore data</i>
                                        </span>
                                    </span>
                                </a>
                            </li>
                            <!--Exercise true status-->
                            <li ng-repeat="exercise in Exercises" class="list-group-item" id="exercise-{{exercise.exerciseId}}" ng-class="showModule ? 'Active': 'inActive'" ng-if="exercise.exerciseStatus">
                                <a href="#exercise-{{exercise.exerciseId}}" ng-click="OnExerciseClick('exercise-'+exercise.exerciseId, exercise)">
                                    <i class="fa" ng-class="showExercise && Ekey == 'exercise-'+exercise.exerciseId && exercise.Tasks.length > 0 ? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa " ng-class="showExercise && Ekey == 'exercise-'+exercise.exerciseId && exercise.Tasks.length > 0 ? 'fa-envelope-open':'fa-envelope'"></i>&nbsp;{{exercise.exerciseName}} <span class="badge bg-warning">{{exercise.exerciseCategory}}</span>
                                    <span class="option-btn">
                                        <span class="me-3 pe-1 position-relative" ng-if="exercise.Tasks.length > 0">
                                            Tasks
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                {{exercise.Tasks.length}}
                                            </span>
                                        </span>
                                        <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnPostData('Task', 'post', exercise.exerciseId)">{{CTask}}</span>
                                        <span class="btn btn-sm btn-primary manupulate-btn" ng-if="exercise.Tasks.length > 1" ng-click="OnMoveData('Task', exercise.Tasks)"><i class="fa fa-undo"></i>&nbsp;{{RTask}}</span>
                                        <i class="fa fa-edit text-info" ng-click="OnPutData('Exercise', 'put', exercise)"></i>
                                        <i class="fa fa-trash text-danger" ng-click="OnDeleteData('Exercise', exercise.exerciseId)"></i>
                                    </span>
                                    <div class="discription-box">
                                        <i class="fa fa-arrow-right"></i> {{exercise.exerciseDescription}}
                                    </div>
                                </a>

                                <!--Task-->
                                <ul class="list-group list-group-numbered" ng-if="Ekey == 'exercise-'+exercise.exerciseId">
                                    <!--Task false status-->
                                    <li ng-repeat="task in Tasks" class="list-group-item" id="task-{{task.taskId}}" ng-class="showExercise ? 'Active tasks': 'inActive'" ng-if="!task.taskStatus">
                                        <a href="#task-{{task.taskId}}" ng-click="OnTaskClick('task-'+task.taskId, task)">
                                            <i class="fa" ng-class="showTask && Tkey == 'task-'+task.taskId ? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa fa-clipboard"></i>&nbsp;{{task.taskName}}
                                            <span class="option-btn">
                                                <span class="btn btn-sm btn-primary manupulate-btn" ng-click="OnRestore('Task', task.taskId)">
                                                    <i class="fa fa-refresh"> &nbsp; Restore data</i>
                                                </span>
                                            </span>
                                        </a>
                                    </li>
                                    <!--Task true status-->
                                    <li ng-repeat="task in Tasks" class="list-group-item" id="task-{{task.taskId}}" ng-class="showExercise ? 'Active tasks': 'inActive'" ng-if="task.taskStatus">
                                        <a href="#task-{{task.taskId}}" ng-click="OnTaskClick('task-'+task.taskId, task)">
                                            <i class="fa" ng-class="showTask && Tkey == 'task-'+task.taskId ? 'fa-angle-down':'fa-angle-right'"></i> &nbsp;<i class="fa fa-clipboard"></i>&nbsp;{{task.taskName}}
                                            <span class="option-btn">
                                                <i class="fa fa-edit text-info" ng-click="OnPutData('Task', 'put', task)"></i>
                                                <i class="fa fa-trash text-danger" ng-click="OnDeleteData('Task', task.taskId)"></i>
                                            </span>
                                            <div class="discription-box">
                                                <i class="fa fa-arrow-right"></i> {{task.taskDescription}}
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>

                @*Insert data Modal*@
                <div id="id01" class="modal">
                    <span ng-click="OnCancel()" class="close" title="Close Modal">&times;</span>
                    <form name="myForm" id="mFormId" class="modal-content" ng-submit="OnSubmitData()">
                        <div class="container">
                            <h1 class="text-center">Insert {{insert}} Form</h1>
                            <input type="hidden" class="insert-data" ng-model="form.id" required>
                            <div class="row">
                                <div class="col label-class">
                                    <label for="name"><b>Name</b></label>
                                </div>
                                <div class="col my-auto">
                                    <input type="text" class="insert-data" ng-model="form.name" placeholder="Enter Name" name="name" required pattern="[a-zA-z ]+$"><br />
                                    <span ng-if="myForm.name.$invalid && myForm.name.$touched" class="text-danger">**Name is required</span><br />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label-class">
                                    <label for="description"><b>Description</b></label>
                                </div>
                                <div class="col my-auto">
                                    <input type="text" class="insert-data" ng-model="form.description" placeholder="Enter Description" name="descriptions" pattern="[a-zA-z0-9 ]+$" required><br />
                                    <span ng-if="myForm.descriptions.$invalid && myForm.descriptions.$touched" class="text-danger">**description must be in character or number</span><br />
                                </div>
                            </div>
                            <div class="row" ng-if="insert=='Exercise'">
                                <div class="col label-class">
                                    <label for="Category"><b>Category</b></label>
                                </div>
                                <div class="col my-auto">
                                    <input type="text" class="insert-data" ng-model="form.category" placeholder="Category" name="Category" required pattern="[a-zA-z0-9 ]+$"><br />
                                    <span ng-if="myForm.Category.$invalid && myForm.Category.$touched" class="text-danger">**it can be characters</span><br />
                                </div>
                            </div>

                            <div class="clearfix modelBtn">
                                <button type="button" ng-click="OnCancel()" class="btn btn-secondary btn-lg">Cancel</button>
                                <button type="submit" ng-disabled="myForm.$invalid || myForm.$pending" class="btn btn-primary btn-lg" value="submit" id="submit" name="submit">submit</button>
                            </div>
                        </div>
                    </form>
                </div>


                @*rearrangment Data modal*@
                <div id="id02" class="modal">
                    <span ng-click="OnCancel()" class="close" title="Close Modal">&times;</span>
                    <form name="rearrangeForm" id="rFormId" class="modal-content" ng-submit="handleRearrangeData()">
                        <div class="container text-center">
                            <h1>Rearrangment {{insert}} Data</h1>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Position</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="data in RearrangeData" class="rearrange-th" let tabindex="index">
                                        <th scope="row"><input type="text" ng-init="arrangeData.id[$index] = data[idRD]" ng-value="data[idRD]" required readonly /></th>
                                        <td>{{data[nameRD]}}</td>
                                        <td>

                                            <input type="text" name="position_{{$index}}" ng-model="arrangeData.position[$index]" ng-keyup="check($event,$index)" required pattern="[0-9]+$"/><br />
                                            
                                            <span ng-if="(rearrangeForm['position_'+$index].$invalid && rearrangeForm['position_'+$index].$touched)" class="text-danger">**number required</span><br />
                                            @*<span ng-pattern="isNumber" class="text-danger">**Position must be number</span><br />*@
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="clearfix modelBtn">
                                <button type="button" ng-click="OnCancel()" class="btn btn-secondary btn-lg">cancle</button>
                                <button type="submit" ng-disabled="rearrangeForm.$invalid || rearrangeForm.$pending" class="btn btn-primary btn-lg" value="submit" name="submit">submit</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <div ng-controller="DemoController" class="row">
            <script type="text/ng-template" id="list.html">
                <ul dnd-list="lists">
                    <li ng-repeat="item in lists" dnd-draggable="item" dnd-type="item.type" dnd-effect-allowed="move" dnd-moved="lists.splice($index, 1)" dnd-selected="models.selected = item">
                        <div ng-class="item.type === 'container' ? 'container-element box-blue' : ''">
                            <h3>{{item.type + item.id}}</h3>
                            <div dnd-list="item.columns" dnd-allowed-types="['item']" dnd-drop="dropCallback(index, item, external, type)">
                                <div ng-repeat="subItem in item.columns" dnd-draggable="subItem" dnd-type="'item'" dnd-moved="item.columns.splice($index, 1)" dnd-effect-allowed="move">
                                    <div style="padding:10px; border:1px solid #cccccc">{{subItem.type + subItem.id}}&nbsp;</div>
                                </div>
                                <div class="dndPlaceholder">
                                    <strong>Drop Any Row in Container</strong>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="dndPlaceholder">
                        <strong>Drop Any Row Here</strong>
                    </li>
                </ul>
            </script>

            This template is responsible for rendering a container element. It uses
            the above list template to render each container column
            <script type="text/ng-template" id="container.html">
                <div class="container-element box box-blue">
                    <h3>Container {{item.id}}</h3>
                    <div style="padding:125px" class="column" ng-repeat="lists in item.columns" ng-include="'list.html'"></div>

                </div>
            </script>

            Template for a normal list item
            <script type="text/ng-template" id="item.html">
                <div class="item">Item {{item.id}}</div>
            </script>

            Main area with dropzones and source code
            <div class="nestedDemo">
                <div class="col">
                    <div class="row">
                        <div ng-repeat="(zone, lists) in models.dropzones" class="col">
                            <div class="dropzone box box-yellow">
                                The dropzone also uses the list template
                                <h3>Dropzone {{zone}}</h3>
                                <div ng-include="'list.html'"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
</body>
</html>
