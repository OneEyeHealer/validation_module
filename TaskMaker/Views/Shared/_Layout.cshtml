<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://image.flaticon.com/icons/png/512/906/906334.png" type="image/x-icon"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" integrity="undefined" crossorigin="anonymous">
    <title>TaskMaker | Make Your Work Easy and Mangable</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light bg-light navbar-box">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <span class="nav-title">
                    <i class="fa fa-tasks"></i>&nbsp;TaskMaker
                </span>
            </a>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script>
        AOS.init();
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>